{
  "name": "luca-invernizzi-website",
  "private": true,
  "type": "module",
  "scripts": {
    "prebuild": "pnpm wrangler types",
    "build:github": "nuxt build --target static --ssr false --preset=github_pages",
    "build:cloudflare": "nuxt build --ssr true --preset=cloudflare_module",
    "dev": "nuxt dev",
    "analyze-bundle": "npx nuxi analyze",
    "generate": "nuxt generate",
    "preview": "pnpm run build && wrangler pages dev",
    "postinstall": "nuxt prepare",
    "deploy:cloudflare": "pnpm run build:cloudflare && npx wrangler --cwd .output/ deploy",
    "cf-typegen": "wrangler types",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "typecheck": "npx nuxi typecheck",
    "upgrade": "npx nuxi@latest upgrade --dedupe && pnpm update --latest && pnpm audit fix",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage"
  },
  "dependencies": {
    "@nuxt/eslint": "1.4.1",
    "@nuxt/fonts": "0.11.4",
    "@nuxt/icon": "1.15.0",
    "@nuxt/image": "1.10.0",
    "@nuxt/ui": "^3.2.0",
    "@nuxtjs/robots": "5.2.11",
    "@nuxtjs/sitemap": "^7.4.1",
    "@pinia/nuxt": "0.11.1",
    "@unhead/schema-org": "^2.0.11",
    "eslint": "^9.30.0",
    "glob": "^11.0.3",
    "nuxt": "^3.17.5",
    "nuxt-link-checker": "^4.3.0",
    "vue-router": "^4.5.1"
  },
  "devDependencies": {
    "@iconify-json/mdi": "^1.2.3",
    "@iconify-json/uil": "^1.2.3",
    "@nuxt/test-utils": "3.19.1",
    "@nuxt/types": "^2.18.1",
    "@testing-library/vue": "^8.1.0",
    "@types/jsdom": "^21.1.7",
    "@types/node": "^24.0.7",
    "@vitejs/plugin-vue": "^5.2.4",
    "@vue/test-utils": "^2.4.6",
    "autoprefixer": "^10.4.21",
    "happy-dom": "^17.6.3",
    "jsdom": "^26.1.0",
    "nitro-cloudflare-dev": "^0.2.2",
    "node-glob": "^1.2.0",
    "pinia": "^3.0.3",
    "playwright-core": "^1.53.2",
    "sass-embedded": "^1.89.2",
    "tailwindcss": "^4.1.10",
    "terser": "^5.43.1",
    "typescript": "^5.8.3",
    "vitest": "^3.2.4",
    "vue": "^3.5.17",
    "vue-tsc": "^2.2.10",
    "wrangler": "^4.21.0"
  },
  "packageManager": "pnpm@10.8.1+sha512.c50088ba998c67b8ca8c99df8a5e02fd2ae2e2b29aaf238feaa9e124248d3f48f9fb6db2424949ff901cffbb5e0f0cc1ad6aedb602cd29450751d11c35023677"
}
